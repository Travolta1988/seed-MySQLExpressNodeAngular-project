                            //i.icon-basket-1 link to the cart!
                        nav
                            ul.menu.margin010.padding50
                                li.orange
                                    a(href='/') MAIN
                                li.yellow.megamenu
                                    a(href='/page1') PAGE1
                                li.red
                                    a(href='/page2/main') PAGE2
                                li.blue
                                    a(href='/page3') PAGE3
                                li.yellow.megamenu
                                    a(href='/page4') PAGE4
                                li.green
                                    a(href='/page5') PAGE5
                        .space10
